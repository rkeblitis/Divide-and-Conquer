<%= form_for Bill.new, html: {class: "form"} do |f| %>
<%= f.label       "Bill" %><br>
<%= f.text_field  :name %><br>
<%= f.label       "Amount" %><br>
<%= f.text_field  :amount %><br>
<%= f.label       "Comment" %><br>
<%= f.text_field  :description %><br>
<%= f.submit      "Submit", :class => "btn btn-default" %>
<%  end %>


  <%= form_for Payment.new, html: {class: "form"} do |f| %>
    <% User.all.each do |user| %>
    <%= f.label "#{user.username}" %>
    <%= f.check_box(:user_id, { :multiple => true }, user) %>
    <% end %>
  <%end %>
